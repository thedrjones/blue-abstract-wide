<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="VIDEOS_MENU">

    <button>
        <type>VIDEO_BROWSER</type>
        <text>Watch Videos</text>
        <text lang="DE">Filme und Serien</text>
        <description>Browse your video library</description>
        <description lang="DE">Videos aus deiner Sammlung anschauen</description>
        <action>JUMP Video Default</action>
    </button>

    <button>
        <type>TV_WATCH_RECORDINGS</type>
        <text>TV Recordings</text>
        <text lang="DE">TV-Aufnahmen</text>
        <description>Browse your recordings</description>
        <description lang="DE">Aufgenommene TV-Sendunden ansehen</description>
        <action>TV_WATCH_RECORDING</action>
    </button>

    <button>
        <type>DVD_PLAY</type>
        <text>Play DVD</text>
        <text lang="DE">DVD abspielen</text>
        <description>Play a film on Blu-ray or DVD</description>
        <description lang="DE">Filme von DVD oder Blu-ray ansehen</description>
        <action>JUMP Play Disc</action>
    </button>

    <button>
        <type>XBMC_VIDEO</type>
        <text>Kodi Player</text>
        <description>Launch the Kodi media player</description>
        <action>EXEC DISPLAY=:0 kodi</action>
    </button>

    <button>
        <type>NET_VIDEO_SEARCH</type>
        <text>Search Internet Video</text>
        <text lang="DE">Suche Videos im Internet</text>
        <description>Search popular video sites</description>
        <description lang="DE">Suche Videos und Clips im Internet</description>
        <action>JUMP MythNetSearch</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>NET_VIDEO_TREE</type>
        <text>Browse Internet Video</text>
        <text lang="DE">Video von Webseiten</text>
        <description>Browse video highlights and popular sites</description>
        <description lang="DE">Stöbere durch populäre Videoportale</description>
        <action>JUMP MythNetTree</action>
        <depends>mythnetvision</depends>
    </button>

</mythmenu>
